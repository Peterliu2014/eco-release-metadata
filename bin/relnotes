#!/bin/bash

new=$1

src=${HOME}/Src/aw-github/hadoop/dev-support
hrmd=${HOME}/Src/aw-github/hadoop-release-metadata

if [[ ! -e "${src}/releasedocmaker.py" ]]; then
  echo "no releasedocmaker.py"
  exit 1
fi

"${src}/releasedocmaker.py" --version "${new}"

mkdir -p "${hrmd}/${new}/"

for i in *.md
do
  j=$(echo "${i}" | sed -e "s,.${new},,g")
  mv "${i}" "${hrmd}/${new}/${j}"
done
oldp=$(pwd)
cd "${hrmd}"
git add "${new}/*"
cd "${oldp}"
#git push
