#!/bin/bash

old=$1
new=$2

repo=${HOME}/Src/aw-github/hadoop-release-metadata

./relnotes-md.py --previousVer "${old}" --version "${new}"
./changes-md.py --version "${new}"

mkdir -p "${repo}/${new}/"

for i in *.md
do
  j=$(echo "${i}" | sed -e "s,.${new},,g")
  mv "${i}" "${repo}/${new}/${j}"
done
oldp=$(pwd)
cd "${repo}"
d=$(date -u "+%Y-%m-%d %H:%m")
git add "${new}/*"
git commit -a -m "${d} UTC auto-commit"
cd "${oldp}"
#git push
